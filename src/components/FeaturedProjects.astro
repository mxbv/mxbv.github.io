---
import { projects } from "../data/projects";
import Icon from "./Icon.astro";
---

<section class="mt-20" id="work">
  <div class="flex items-end justify-between mb-6 px-2">
    <h2
      class="text-xl font-bold tracking-tight-soft text-white flex items-center gap-4 leading-tight"
    >
      <Icon name="view_kanban" size={24} class="text-primary" />
      <span>Featured Work</span>
    </h2>
    <span class="font-mono text-xs text-text-dim hidden md:block">
      01 — {String(projects.length).padStart(2, "0")}
    </span>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {
      projects.map((project, index) => (
        <a
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
          class="bento-card p-6 group hover:border-primary/50"
        >
          <div class="flex items-start gap-4">
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-4 mb-3 items-center">
                <img
                  src={project.imageUrl}
                  alt={project.imageAlt || project.title}
                  class="w-14 h-14 object-contain rounded-xl"
                />
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-semibold text-white mb-2  leading-snug">
                    {project.title}
                  </h3>
                  <p class="font-mono text-xs text-text-soft uppercase tracking-wide-soft">
                    {project.subtitle}
                  </p>
                </div>
                <div class="flex-shrink-0 w-12 h-12 rounded-2xl group-hover:text-primary flex items-center justify-center text-white/50 transition-all duration-300 ease-out text-xl transform group-hover:rotate-[-45deg]">
                  →
                </div>
              </div>

              <p class="text-text-soft text-sm leading-relaxed-soft mb-5 tracking-normal-soft">
                {project.solution}
              </p>

              <div class="flex flex-wrap gap-2.5">
                {project.technologies.map((tech) => (
                  <span class="px-4 py-1.5 rounded-xl bg-surface-soft/60 bento-card text-xs font-mono text-text-soft backdrop-blur-soft text-white/70">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</section>
