---
import { contacts } from "../data/contacts";
import Icon from "./Icon.astro";
import Card from "./Card.astro";
---

  <section class="flex flex-col md:flex-row gap-12 mt-16" id="contact">
  <div class="rounded-2xl flex flex-col justify-center items-start">
    <h2
      class="text-6xl md:text-7xl font-black text-white tracking-tighter leading-[0.9]"
    >
      LET'S<br />MAKE IT <br /> REAL
    </h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full flex-1">
    {
      contacts.map((contact) => (
        <a
          href={contact.href}
          target={contact.href.startsWith("http") ? "_blank" : undefined}
          rel={
            contact.href.startsWith("http") ? "noopener noreferrer" : undefined
          }
          class="block"
        >
          <Card variant="dark" padding="md" class="flex items-center justify-between group hover:border-primary">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-surface-dark border border-surface-border flex items-center justify-center text-white group-hover:text-primary transition-colors duration-300">
              <Icon name={contact.icon} size={24} />
            </div>
            <div>
              <p class="text-sm font-mono text-text-dim uppercase">
                {contact.label}
              </p>
              <p class="text-lg font-bold text-white">{contact.value}</p>
            </div>
          </div>
          <Icon
            name="arrow_outward"
            size={20}
            class="text-gray-500 group-hover:text-white transition-colors duration-300"
          />
          </Card>
        </a>
      ))
    }
  </div>
</section>
