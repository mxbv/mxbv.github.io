---
import { contacts } from "../data/contacts";
---

  <section class="flex flex-col md:flex-row gap-16 mt-20" id="contact">
  <div class="rounded-softer flex flex-col justify-center items-start">
    <h2
      class="text-6xl md:text-7xl font-black text-white tracking-tighter-soft leading-[1.05]"
    >
      LET'S<br />MAKE IT <br /> REAL
    </h2>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full flex-1">
    {
      contacts.map((contact) => (
        <a
          href={contact.href}
          target={contact.href.startsWith("http") ? "_blank" : undefined}
          rel={
            contact.href.startsWith("http") ? "noopener noreferrer" : undefined
          }
          class="block"
        >
          <div class="bento-card p-6 flex items-center justify-between group hover:border-primary/50">
          <div class="flex items-center gap-5">
            <div>
              <p class="text-sm font-mono text-text-dim uppercase mb-1.5 tracking-wide-soft">
                {contact.label}
              </p>
              <p class="text-lg font-semibold text-white leading-snug">{contact.value}</p>
            </div>
          </div>
          <span class="text-text-dim group-hover:text-primary transition-all duration-300 text-xl transition-all duration-300 ease-out text-xl transform group-hover:rotate-[-45deg]">â†’</span>
          </div>
        </a>
      ))
    }
  </div>
</section>
