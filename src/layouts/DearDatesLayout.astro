---
interface Props {
  title?: string;
}

const { title = "Dear Dates - Remember What's Important" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" />
    <meta
      name="description"
      content="A simple way to remember what's important and make your loved ones happy on time."
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col antialiased bg-gradient-to-br from-pink-50/80 via-rose-50/80 to-pink-100/80">
    <slot />
  </body>
</html>

<style is:global>
  body {
    color: #1f2937;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }
</style>
