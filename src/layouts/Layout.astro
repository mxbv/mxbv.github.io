---
interface Props {
  title?: string;
}

const { title = "Maksym Baranov - Product Creator & AI-Augmented Developer" } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.png" />
    <meta
      name="description"
      content="Maksym Baranov - Bridging ideas and shipping products at 5x speed through AI-Augmented Engineering"
    />
    <title>{title}</title>
  </head>
  <body
    class="bg-background-dark min-h-screen flex flex-col antialiased"
  >
    <slot />
    <script is:inline>
      // Защита от ошибок до загрузки DOM
      (function () {
        if (typeof window === "undefined" || typeof document === "undefined")
          return;

        // Перехватываем ошибки глобально
        window.addEventListener(
          "error",
          function (e) {
            if (
              e.message &&
              (e.message.includes("document.body") ||
                e.message.includes("null is not an object") ||
                e.message.includes("scrollHeight"))
            ) {
              // Игнорируем ошибки, связанные с document.body до загрузки
              e.preventDefault();
              e.stopPropagation();
              return false;
            }
          },
          true
        );

        // Защита document.body.scrollHeight через прокси
        try {
          if (document.body === null) {
            const bodyDescriptor = Object.getOwnPropertyDescriptor(
              document,
              "body"
            );
            if (bodyDescriptor && bodyDescriptor.get) {
              const originalGet = bodyDescriptor.get;
              Object.defineProperty(document, "body", {
                get: function () {
                  const body = originalGet.call(document);
                  if (!body) {
                    // Возвращаем безопасный объект-заглушку
                    return {
                      scrollHeight: 0,
                      scrollTop: 0,
                      scrollWidth: 0,
                      clientHeight: 0,
                      clientWidth: 0,
                      offsetHeight: 0,
                      offsetWidth: 0,
                      addEventListener: function () {},
                      removeEventListener: function () {},
                      appendChild: function () {},
                      removeChild: function () {},
                      querySelector: function () {
                        return null;
                      },
                      querySelectorAll: function () {
                        return [];
                      },
                      getElementsByTagName: function () {
                        return [];
                      },
                      getElementsByClassName: function () {
                        return [];
                      },
                      style: {},
                      classList: {
                        add: function () {},
                        remove: function () {},
                        toggle: function () {},
                      },
                      setAttribute: function () {},
                      getAttribute: function () {
                        return null;
                      },
                      removeAttribute: function () {},
                    };
                  }
                  return body;
                },
                configurable: true,
              });
            }
          }
        } catch (e) {
          // Игнорируем ошибки при попытке переопределить body
        }
      })();
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    background: #1A1A1A;
  }
  body {
    background: linear-gradient(180deg, #0F0F0F 0%, #1A1A1A 100%);
    background-attachment: fixed;
    color: #ffffff;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  p {
    line-height: 1.7;
  }

  .bento-card {
    background-color: #1F1F1F;
    border: 1px solid #2F2F2F;
    border-radius: 2rem;
    overflow: hidden;
    box-shadow: 0 4px 20px -4px rgba(0, 0, 0, 0.3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bento-card:hover {
    border-color: #3A3A3A;
    transform: translateY(-3px);
    box-shadow: 0 8px 30px -6px rgba(0, 0, 0, 0.4);
  }

  .glow-hover:hover {
    box-shadow: 0 0 40px -8px rgba(91, 141, 239, 0.25);
    border-color: rgba(91, 141, 239, 0.4);
  }

  /* Custom color utilities - теперь используются из Tailwind конфига */
  /* Цвета определены в tailwind.config.mjs и доступны через классы Tailwind */

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #1A1A1A;
  }
  ::-webkit-scrollbar-thumb {
    background: #2F2F2F;
    border-radius: 8px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #3A3A3A;
  }
</style>
